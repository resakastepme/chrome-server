{
    "name": "monaz/vt-php-api3",
    "description": "The unofficial PHP client library for VirusTotal Public API v3.0",
    "type": "library",
    "keywords": ["virus","virustotal", "api", "php", "security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mohsen Nazari",
            "email": "mohsennazari90@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "Monaz\\VirusTotal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Monaz\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "vendor-dir" : "vendor",
        "vendor-bin" : "vendor/bin"
    }
}
